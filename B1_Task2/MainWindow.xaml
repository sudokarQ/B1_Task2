<Window x:Class="B1_Task2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:B1_Task2"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Button Content="Load Excel Data" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Click="LoadExcelButton_Click"/>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Right" VerticalAlignment="Top" Width="680" Height="271" Margin="0,292,10,0"
                  AutoGenerateColumns="True"/>
        <DataGrid x:Name="dataGridTotals" HorizontalAlignment="Right" VerticalAlignment="Top" Width="680" Height="226" Margin="0,10,10,0"
                  AutoGenerateColumns="True"/>
    </Grid>
</Window>
